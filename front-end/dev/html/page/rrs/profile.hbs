---
layout: layout.hbs
---
<div class="content">
  <div class="content__padded">
    <div class="profile_content">
      <h3 class="title_profile">Your Profile</h3>
      <form class="input-group" id="form_profile">
        <div class="input-row">
          <label class="label__profile" for="first_name">First Name <span class="compulsory__status">*</span></label>
          <div class="input-control ml96">
            <input class="input__profile js-answer-key" id="first_name" type="text" name="name_first" value="">
          </div>
        </div>
        <div class="input-row">
          <label class="label__profile" for="last_name">Last Name </label>
          <div class="input-control ml96">
            <input class="input__profile" id="last_name" type="text" name="name_last" value="">
          </div>
        </div>
        <div class="input-row">
          <label class="label__profile" for="email">Email <span class="compulsory__status">*</span></label>
          <div class="input-control ml64">
            <input class="input__profile js-answer-key" id="email" type="email" name="email" value="">
          </div>
        </div>
        <div class="input-row">
          <label class="label__profile" for="telephone">Mobile Phone </label>
          <div class="input-control ml117">
            <input class="input__profile" id="telephone" type="tel" name="mobile_phone" value="">
          </div>
        </div>
        <div class="input-row">
          <label class="label__profile" for="zip_code">Zip Code/ Postal Code </label>
          <div class="input-control ml170">
            <input class="input__profile" id="zip_code" type="tel" name="zip_code" value="">
          </div>
          <div class="checkbox__styled distance_pad">
            <input type="checkbox" class="checkbox__styled__input" id="checkbox-1" name="checkbox" value="1">
            <label class="checkbox__styled__label" for="checkbox-1">Out of United States</label>
          </div>
        </div>
        <div class="input-row">
          <label class="label__profile" for="birthday">Date of Birth <span class="compulsory__status">*</span></label>
          <div class="input-control ml108">
            <input class="input__profile js-answer-key" id="birthday" type="date" name="birthday" placeholder="dd/mm/yyyy" value="">
            <div class="dropdown_day">
              <i class="icons_arrow_down">&nbsp;</i>
            </div>
          </div>
        </div>
        <div class="input-row placement-row">
          <label class="label__profile pt18" for="gender">Gender <span class="compulsory__status">*</span></label>
          <div class="input-control ml77">
            <div class="radio__circle measure__circle pr0">
              <input type="radio" class="radio__circle__input" id="female" name="gender" value="female">
              <label class="radio__circle__inner" for="female">Female</label>
            </div>
            <div class="radio__circle measure__circle">
              <input type="radio" class="radio__circle__input" id="male" name="gender" value="male">
              <label class="radio__circle__inner" for="male">Male</label>
            </div>
          </div>
        </div>
        <div class="input-row placement-row">
          <label class="label__profile pt22" for="height">Height <span class="compulsory__status">*</span></label>
          <div class="input-control ml77">
            <div class="cases_value mt17">
              <input class="input__profile js-answer-key" id="height" type="number" name="height" value="">
            </div>
            <div class="radio__circle measure__circle pr0">
              <input type="radio" class="radio__circle__input js-answer-key" id="cm" name="height_unit" value="cm" data-required="true">
              <label class="radio__circle__inner" for="cm">cm</label>
            </div>
            <div class="radio__circle measure__circle">
              <input type="radio" class="radio__circle__input js-answer-key" id="inches" name="height_unit" value="inches" checked="" data-required="true">
              <label class="radio__circle__inner" for="inches">inches</label>
            </div>
          </div>
        </div>
        <div class="input-row placement-row">
          <label class="label__profile pt19" for="weight">Weight <span class="compulsory__status">*</span></label>
          <div class="input-control ml77">
            <div class="cases_value mt16">
              <input class="input__profile js-answer-key" id="weight" type="number" name="weight" value="">
            </div>
            <div class="radio__circle measure__circle pr0">
              <input type="radio" class="radio__circle__input js-answer-key" id="kg" name="weight_unit" value="kg" data-required="true">
              <label class="radio__circle__inner" for="kg">kg</label>
            </div>
            <div class="radio__circle measure__circle">
              <input type="radio" class="radio__circle__input js-answer-key" id="lbs" name="weight_unit" value="lbs" checked="" data-required="true">
              <label class="radio__circle__inner" for="lbs">lbs</label>
            </div>
          </div>
        </div>
        <div class="input-row">
          <div class="checkbox__styled p0 mt15">
            <input type="checkbox" class="checkbox__styled__input" id="checkbox-2" name="flag" value="yes" checked="">
            <label class="checkbox__styled__label" for="checkbox-2">I want to receive brainsalvation news and personalized information from Pegara.</label>
          </div>
          <p class="para_terms">By clicking the button below. I agree with the Pegara <a class="link_terms" href="#">Terms of Service</a> and <a class="link_terms" href="#">Privacy Policy</a>.</p>
        </div>
        <div class="check__score">
          <button class="btn btn-block btn__regular js-submit-button" type="submit">Check your score!</button>
        </div>
      </form>
    </div>
  </div>
</div>
